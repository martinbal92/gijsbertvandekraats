---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
}

const { title, description, image, href } = Astro.props;
---

<a
  href={href}
  class="group block bg-warm-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg hover:translate-y-[-2px] transition-all duration-300"
>
  <!-- Image -->
  <div class="relative aspect-4/3 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
      decoding="async"
    />
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="font-heading text-xl font-semibold text-chocolate leading-snug">
      {title}
    </h3>

    <p class="mt-2 text-sm sm:text-base font-body text-chocolate/65 leading-relaxed line-clamp-3">
      {description}
    </p>

    <!-- Arrow indicator -->
    <div class="mt-4 flex items-center gap-1.5 text-caramel text-sm font-medium font-body">
      <span class="group-hover:underline">Bekijk meer</span>
      <svg
        class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
</a>
