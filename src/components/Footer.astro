---
import type { Locale } from '../i18n/utils';
import { t, pageSlugMap } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const navItems = [
  { key: 'home', slug: '' },
  { key: 'bruidstaarten', slug: 'bruidstaarten' },
  { key: 'zakelijk', slug: 'zakelijk' },
  { key: 'vijfheeren', slug: 'vijfheeren' },
  { key: 'over', slug: 'over' },
  { key: 'contact', slug: 'contact' },
];

function getNavUrl(slugKey: string): string {
  if (!slugKey) return `/${locale}`;
  const slug = locale === 'en' ? (pageSlugMap[slugKey] || slugKey) : slugKey;
  return `/${locale}/${slug}`;
}

const currentYear = new Date().getFullYear();
const copyrightText = t(locale, 'footer.copyright').replace('{year}', String(currentYear));
---

<footer class="bg-chocolate text-cream/90">
  <!-- Caramel accent line -->
  <div class="h-1 bg-gradient-to-r from-caramel/40 via-caramel to-caramel/40" />

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 lg:gap-16">

      <!-- Column 1: Brand & Navigation -->
      <div>
        <h3 class="font-heading text-xl font-bold text-warm-white mb-2">
          Van de Kraats
        </h3>
        <p class="text-cream/60 text-sm mb-8">
          {t(locale, 'footer.tagline')}
        </p>

        <h4 class="text-xs font-medium uppercase tracking-widest text-caramel mb-4">
          {t(locale, 'footer.nav_title')}
        </h4>
        <nav class="flex flex-col gap-2" aria-label="Footer navigation">
          {navItems.map(({ key, slug }) => (
            <a
              href={getNavUrl(slug)}
              class="text-sm text-cream/60 hover:text-caramel transition-colors duration-200 w-fit"
            >
              {t(locale, `nav.${key}`)}
            </a>
          ))}
        </nav>
      </div>

      <!-- Column 2: Contact -->
      <div>
        <h4 class="text-xs font-medium uppercase tracking-widest text-caramel mb-4">
          {t(locale, 'footer.contact_title')}
        </h4>
        <div class="space-y-4">
