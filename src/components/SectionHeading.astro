---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  light?: boolean;
}

const {
  title,
  subtitle,
  centered = false,
  light = false,
} = Astro.props;

const alignment = centered ? 'text-center items-center' : 'text-left items-start';
const titleColor = light ? 'text-cream' : 'text-chocolate';
const subtitleColor = light ? 'text-cream/70' : 'text-chocolate/60';
---

<div class={`fade-in flex flex-col gap-4 ${alignment}`}>
  <h2 class={`font-heading text-3xl sm:text-4xl font-bold leading-tight tracking-tight ${titleColor}`}>
    {title}
  </h2>

  <!-- Decorative caramel line -->
  <span class="block w-12 h-0.5 bg-caramel rounded-full" aria-hidden="true" />

  {subtitle && (
    <p class={`max-w-2xl text-base sm:text-lg font-body leading-relaxed ${subtitleColor}`}>
      {subtitle}
    </p>
  )}
</div>
