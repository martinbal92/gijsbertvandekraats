---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import FadeIn from '../../components/FadeIn.astro';
import { t, tObject } from '../../i18n/utils';

const locale = 'nl';
const title = t(locale, 'seo.contact.title');
const description = t(locale, 'seo.contact.description');

// Subject options
const subjectOptions = tObject(locale, 'contact.form.subject_options') as Record<string, string>;
---

<BaseLayout title={title} description={description} locale={locale}>

  <!-- Hero Section -->
  <Hero
    title={t(locale, 'contact.hero.title')}
    subtitle={t(locale, 'contact.hero.subtitle')}
    backgroundImage="/images/hero/contact-hero.jpg"
  />

  <!-- Contact Section: Form + Info -->
  <section class="py-20 sm:py-24 bg-cream">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

      <!-- Intro text -->
      <FadeIn>
        <p class="mx-auto max-w-2xl text-center font-body text-base sm:text-lg text-chocolate/70 leading-relaxed mb-12 sm:mb-16">
          {t(locale, 'contact.intro')}
        </p>
      </FadeIn>

      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Contact Form (left, wider) -->
        <div class="lg:col-span-3">
          <FadeIn>
            <form action="#" method="POST" class="space-y-6">

              <!-- Name -->
              <div>
                <label for="name" class="block font-body text-sm font-medium text-chocolate mb-2">
                  {t(locale, 'contact.form.name')} <span class="text-caramel">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-chocolate/20 bg-warm-white text-chocolate font-body text-base placeholder:text-chocolate/30 focus:outline-none focus:ring-2 focus:ring-caramel focus:border-transparent transition-all duration-200"
                  placeholder={t(locale, 'contact.form.name')}
                />
              </div>

              <!-- Email + Phone (two columns on desktop) -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block font-body text-sm font-medium text-chocolate mb-2">
                    {t(locale, 'contact.form.email')} <span class="text-caramel">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 rounded-xl border border-chocolate/20 bg-warm-white text-chocolate font-body text-base placeholder:text-chocolate/30 focus:outline-none focus:ring-2 focus:ring-caramel focus:border-transparent transition-all duration-200"
                    placeholder={t(locale, 'contact.form.email')}
                  />
                </div>
                <div>
                  <label for="phone" class="block font-body text-sm font-medium text-chocolate mb-2">
                    {t(locale, 'contact.form.phone')}
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 rounded-xl border border-chocolate/20 bg-warm-white text-chocolate font-body text-base placeholder:text-chocolate/30 focus:outline-none focus:ring-2 focus:ring-caramel focus:border-transparent transition-all duration-200"
                    placeholder={t(locale, 'contact.form.phone')}
                  />
                </div>
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block font-body text-sm font-medium text-chocolate mb-2">
                  {t(locale, 'contact.form.subject')}
                </label>
                <div class="relative">
                  <select
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 rounded-xl border border-chocolate/20 bg-warm-white text-chocolate font-body text-base focus:outline-none focus:ring-2 focus:ring-caramel focus:border-transparent transition-all duration-200 appearance-none cursor-pointer"
                  >
                    <option value="" disabled selected>{t(locale, 'contact.form.subject')}</option>
                    {Object.entries(subjectOptions).map(([key, label]) => (
                      <option value={key}>{label}</option>
                    ))}
                  </select>
                  <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-chocolate/40 pointer-events-none" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block font-body text-sm font-medium text-chocolate mb-2">
                  {t(locale, 'contact.form.message')} <span class="text-caramel">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-chocolate/20 bg-warm-white text-chocolate font-body text-base placeholder:text-chocolate/30 focus:outline-none focus:ring-2 focus:ring-caramel focus:border-transparent transition-all duration-200 resize-vertical"
                  placeholder={t(locale, 'contact.form.message')}
                ></textarea>
              </div>

              <!-- Turnstile CAPTCHA -->
              <div class="cf-turnstile" data-sitekey="0x4AAAAAACf4xLpHrODRjSUA" data-theme="light" data-language="nl"></div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  id="contact-submit"
                  class="inline-flex items-center gap-2 bg-caramel text-white px-8 py-3.5 rounded-full text-base font-medium font-body shadow-lg hover:bg-caramel/90 hover:shadow-xl hover:translate-y-[-1px] active:translate-y-0 transition-all duration-200"
                >
                  {t(locale, 'contact.form.submit')}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </button>
              </div>

            </form>
          </FadeIn>
        </div>

        <!-- Contact Info (right column) -->
        <div class="lg:col-span-2">
          <FadeIn delay={150}>
            <div class="bg-warm-white rounded-2xl p-8 sm:p-10 border border-caramel/10">
              <h3 class="font-heading text-xl sm:text-2xl font-bold text-chocolate mb-6">
                {t(locale, 'contact.info.title')}
              </h3>
              <span class="block w-10 h-0.5 bg-caramel rounded-full mb-8" aria-hidden="true" />

              <div class="space-y-6">
                <!-- Phone -->
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-caramel/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-caramel" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-chocolate/40 uppercase tracking-wider mb-1">
                      {t(locale, 'contact.info.phone.label')}
                    </p>
                    <a
                      href="tel:+31612278654"
                      class="font-body text-base text-chocolate hover:text-caramel transition-colors duration-200"
                    >
                      {t(locale, 'contact.info.phone.value')}
                    </a>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-caramel/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-caramel" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-chocolate/40 uppercase tracking-wider mb-1">
                      {t(locale, 'contact.info.email.label')}
                    </p>
                    <a
                      href="mailto:info@gijsbertvandekraats.nl"
                      class="font-body text-base text-chocolate hover:text-caramel transition-colors duration-200 break-all"
                    >
                      {t(locale, 'contact.info.email.value')}
                    </a>
                  </div>
                </div>

                <!-- Address -->
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-caramel/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-caramel" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-chocolate/40 uppercase tracking-wider mb-1">
                      {t(locale, 'contact.info.address.label')}
                    </p>
                    <p class="font-body text-base text-chocolate">
                      {t(locale, 'contact.info.address.value')}
                    </p>
                  </div>
                </div>

                <!-- Hours -->
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-caramel/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-caramel" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-medium text-chocolate/40 uppercase tracking-wider mb-1">
                      {t(locale, 'contact.info.hours.label')}
                    </p>
                    <p class="font-body text-base text-chocolate">
                      {t(locale, 'contact.info.hours.value')}
                    </p>
                  </div>
                </div>
              </div>

              <!-- Social Links -->
              <div class="mt-8 pt-6 border-t border-chocolate/10">
                <p class="text-xs font-medium text-chocolate/40 uppercase tracking-wider mb-4">
                  {t(locale, 'footer.social_title')}
                </p>
                <div class="flex gap-3">
                  <!-- Instagram -->
                  <a
                    href="https://www.instagram.com/gijsbertvandekraats/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 rounded-full bg-caramel/10 hover:bg-caramel/20 flex items-center justify-center transition-colors duration-200"
                    aria-label="Instagram"
                  >
                    <svg class="w-5 h-5 text-chocolate/60" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                    </svg>
                  </a>

                  <!-- Facebook -->
                  <a
                    href="https://www.facebook.com/gijsbertvandekraats"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 rounded-full bg-caramel/10 hover:bg-caramel/20 flex items-center justify-center transition-colors duration-200"
                    aria-label="Facebook"
                  >
                    <svg class="w-5 h-5 text-chocolate/60" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                    </svg>
                  </a>

                  <!-- WhatsApp -->
                  <a
                    href="https://wa.me/31612278654"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 rounded-full bg-caramel/10 hover:bg-caramel/20 flex items-center justify-center transition-colors duration-200"
                    aria-label="WhatsApp"
                  >
                    <svg class="w-5 h-5 text-chocolate/60" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </FadeIn>
        </div>

      </div>
    </div>
  </section>

  <!-- Google Maps Section -->
  <section class="py-20 sm:py-24 bg-warm-white">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <FadeIn>
        <SectionHeading
          title={t(locale, 'contact.info.address.label')}
          subtitle={t(locale, 'contact.info.address.value')}
          centered
        />
      </FadeIn>

      <FadeIn delay={150}>
        <div class="mt-10 sm:mt-12 rounded-2xl overflow-hidden border border-chocolate/10 shadow-sm" id="map-container">
          <!-- Privacy consent overlay -->
          <div id="map-consent" class="relative bg-cream/80 flex flex-col items-center justify-center text-center p-12 sm:p-16 min-h-[400px]">
            <div class="flex-shrink-0 w-14 h-14 rounded-full bg-caramel/10 flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-caramel" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            </div>
            <p class="font-body text-sm sm:text-base text-chocolate/70 mb-6 max-w-md">
              Klik om de kaart van Google Maps te laden. Hierdoor worden gegevens naar Google verzonden.
            </p>
            <button
              id="load-map-btn"
              type="button"
              class="inline-flex items-center gap-2 bg-caramel text-white px-6 py-3 rounded-full text-sm font-medium font-body shadow-md hover:bg-caramel/90 hover:shadow-lg hover:translate-y-[-1px] active:translate-y-0 transition-all duration-200"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
              </svg>
              Kaart laden
            </button>
          </div>
          <!-- Map iframe placeholder -->
          <div id="map-iframe" class="hidden">
            <!-- Iframe will be inserted here by JavaScript -->
          </div>
        </div>
      </FadeIn>
    </div>
  </section>

</BaseLayout>

<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer is:inline></script>

<script>
  // Prevent form submission without Turnstile token
  const contactForm = document.querySelector('form');
  contactForm?.addEventListener('submit', (e) => {
    const token = contactForm.querySelector<HTMLInputElement>('[name="cf-turnstile-response"]');
    if (!token || !token.value) {
      e.preventDefault();
      alert('Vul de beveiligingscontrole in.');
    }
  });
</script>

<script>
  const btn = document.getElementById('load-map-btn');
  const consent = document.getElementById('map-consent');
  const mapIframe = document.getElementById('map-iframe');

  btn?.addEventListener('click', () => {
    if (consent && mapIframe) {
      consent.classList.add('hidden');
      mapIframe.classList.remove('hidden');
      mapIframe.innerHTML = `<iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2468.5!2d4.9897!3d51.9167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c6380c38a3b4a7%3A0x0!2sEnergieweg+3F%2C+Meerkerk!5e0!3m2!1snl!2snl!4v1700000000000"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Locatie Gijsbert van de Kraats, Energieweg 3F, Meerkerk"
      ></iframe>`;
    }
  });
</script>
